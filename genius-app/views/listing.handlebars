<div class="list-group">
    {{#each response.hits}}

    <a href="#/{{this.type}}/{{result.id}}" class="list-group-item list-group-item-action">
            {{!--image--}}
            <div>
<div class="list-minicard-image">
                <img  src="{{result.header_image_thumbnail_url}}"/>
            </div class="minicard-container">
                <div class="list-minicard-info">
                    {{!--name--}}
                    <div> 
                    {{this.result.title}}
                    <div class="minicard-info-artist">
                        {{this.result.primary_artist.name}}
                    </div>
                    </div>
                    
                    {{!--views--}}
                    <div class="minicard-info-views">
                        <img src="images/view-eye.png" alt="eye">
                        <div>{{this.result.stats.pageviews}}</div>
                    </div>
                </div>
            </div>
            
        </a> {{/each}}
</div>